{
  "name": "egg-{{name}}",
  "version": "1.0.0",
  "description": "{{description}}",
  "eggPlugin": {
    "name": "{{name}}"
  },
  "keywords": [
    "egg",
    "plugin"
  ],
  "dependencies": {},
  "devDependencies": {
    "autod": "2",
    "egg": "1",
    "egg-bin": "1",
    "egg-ci": "1",
    "egg-mock": "1",
    "eslint": "3",
    "eslint-config-egg": "3",
    "intelli-espower-loader": "1",
    "power-assert": "1",
    "supertest": "2"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "scripts": {
