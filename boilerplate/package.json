    "autod": "autod"
  },
  "ci": {
    "version": "4, 6, 7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eggjs/egg-{{name}}.git"
  },
  "bugs": {
    "url": "https://github.com/eggjs/egg/issues"
  },
